{% extends "base.html.twig" %}

{% block title %}AppBundle:Profile:index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center my-3">{{ user.getUserName() }}</h1>

        <div class="row">
            <div class="offset-md-3 col-md-6">
                <ul class="list-group">
                    <li class="list-group-item clearfix">
                        <lable>Name: </lable>
                        <strong class="float-right">{{ user.getUserName() }}</strong>
                    </li>
                    <li class="list-group-item clearfix">
                        <lable>Email: </lable>
                        <strong class="float-right">{{ user.getEmail() }}</strong>
                    </li>
                </ul>

                <div class="mt-2">
                    <a href="{{ path('editProfile', {'user_id': user.getId()}) }}" class="btn btn-primary">Edit</a>
                    <a href="{{ path('logout') }}" class="btn btn-danger">Logout</a>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
